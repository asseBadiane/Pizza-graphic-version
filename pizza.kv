#: import utils kivy.utils
MainWidget:

<MainWidget>:
    recycleView: rv
    RecycleView:
        viewclass: 'PizzaWidget'
        id: rv
        RecycleBoxLayout:
            default_size: None, dp(100)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<PizzaWidget>:
    spacing: dp(10)
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.name
               
            FitLabel:
                text: "VEGETARIAN" if root.vegetarian else ""
        LeftAlignLabel:
            text: root.ingredients
    Label:
        text: str(root.price) + "$"
        text_size: self.size
        halign: "right"
        valign: "center"