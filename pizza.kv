#: import utils kivy.utils
#: set color1 "#DD7835"
#: set color2 "#C8C8C8"

MainWidget:


<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<MainWidget>:
    recycleView: rv
    CoverImage:
        source: "images/menu_background.jpg"
    RecycleView:
        viewclass: 'PizzaWidget'
        id: rv
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(16)

<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            # rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0 
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    font_size: dp(10)
    color: 0, 0, 0, 1
    bold: True
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            pos: self.pos
            size: self.size


<PizzaWidget>:
    spacing: dp(10)
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.name
                font_size: dp(22)
                bold: True
            Badge:
                text: "VEGETARIAN" if root.vegetarian else ""
        LeftAlignLabel:
            text: root.ingredients
            color: utils.get_color_from_hex(color2)
    FitLabel:
        text: str(root.price) + "$"
        #text_size: self.size
        # halign: "right"
        #valign: "center"
        font_size: dp(20)
        color: utils.get_color_from_hex(color1)
     